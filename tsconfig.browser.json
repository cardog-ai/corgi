{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "strict": false,
    "noEmit": false,
    "noEmitOnError": false,
    "lib": ["DOM", "ES2020"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
